<h1>Listing resources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Database</th>
    <th>Collection</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.name %></td>
    <td><%= resource.database %></td>
    <td><%= resource.collection %></td>
    <td><%= resource.description %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'flush', flush_resource_path(resource), :remote => true %></td>
    <td><%= link_to 'pull', pull_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

